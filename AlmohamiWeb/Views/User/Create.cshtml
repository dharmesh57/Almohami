@model Almohami.Services.Entities.UserEntityModel

@{
    ViewBag.Title = "Almohami - New User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container">
        <div class="page-content-inner">
            @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @id = "CreateUserForm", @class = "form-horizontal" }))
            {
                <div class="row">
                    <div class="col-md-12">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div id="successdiv" class="alert alert-success alert-dismissible note note-success">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                <h4><i class="icon fa fa-thumbs-up"></i> success!</h4>
                                <span id="successmes">  @TempData["SuccessMessage"]</span>

                            </div>
                        }
                        else if (TempData["ErrorMessage"] != null)
                        {
                            <div id="errordiv" class="alert alert-danger  alert-dismissible">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                <h4><i class="icon fa fa-ban"></i>Error!</h4>
                                <span id="errormes"> @TempData["ErrorMessage"] </span>

                            </div>
                        }

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light ">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-user font-dark"></i>
                                    <span class="caption-subject font-dark sbold uppercase">New User</span>
                                </div>
                            </div>
                            <div class="portlet-body form">
                                <form class="form-horizontal" role="form">
                                    <div class="form-body">
                                        @Html.HiddenFor(m => m.UserID)
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-large", @placeholder = "Name" })
                                                </div>
                                                @Html.ValidationMessageFor(m=>m.Name)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-large", @placeholder = "Add email address.." })
                                                </div>
                                                @Html.ValidationMessageFor(m=>m.Email)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.RoleId, new { @class = "col-md-3 control-label" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-key"></i>
                                                    </span>
                                                    @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.RoleList, "SecurityRoleId", "RoleName"), "---Select Role---", new { @class = "form-control input-large select2-allow-clear", @id = "single-append-text" })
                                                  </div>
                                                @Html.ValidationMessageFor(m=>m.RoleId)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.MobileNo, new { @class = "col-md-3 control-label" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control input-large", @placeholder = "MobileNo" })
                                                </div>
                                                @Html.ValidationMessageFor(m=>m.MobileNo)
                                            </div>
                                        </div>
                                        <div class="alert alert-info">
                                            <strong>Info!</strong> Once added, this user will receive an email to login and create their password.
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <div class="btn-group">
                                                    <button type="submit" class="btn green-meadow"><i class="fa fa-check"></i> Save </button>
                                                    <button type="button" class="btn green-meadow dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li>
                                                            <a href="@Url.Action("SaveAndNew","User")"> <i class="fa fa-plus"></i> Save &amp; New </a>
                                                        </li>                                                       
                                                    </ul>
                                                </div>                                                
                                                <button type="button" class="btn default"><i class="fa fa-remove"></i> Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
