@model Almohami.Services.Entities.ClientEntityModel

@{
    ViewBag.Title = "Almohami - New Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE CONTENT BODY -->
<link href="~/Content/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap-wysihtml5/bootstrap-wysihtml5-rtl.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap-wysihtml5/wysiwyg-color.css" rel="stylesheet" />
<script src="~/Content/bootstrap-wysihtml5/wysihtml5-0.3.0.js" type="text/javascript"></script>
<script src="~/Content/bootstrap-wysihtml5/bootstrap-wysihtml5.js" type="text/javascript"></script>

<div class="page-content">
    <div class="container">
        <div class="page-content-inner">
            @using (Html.BeginForm("Create", "Client", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "CreateClientForm", @class = "form-horizontal" }))
            {
                <div class="row">
                    <div class="col-md-12">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div id="successdiv" class="alert alert-success alert-dismissible note note-success">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                <h4><i class="icon fa fa-thumbs-up"></i> success!</h4>
                                <span id="successmes">  @TempData["SuccessMessage"]</span>

                            </div>
                        }
                        else if (TempData["ErrorMessage"] != null)
                        {
                            <div id="errordiv" class="alert alert-danger  alert-dismissible">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                <h4><i class="icon fa fa-ban"></i>Error!</h4>
                                <span id="errormes"> @TempData["ErrorMessage"] </span>

                            </div>
                        }

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-user font-dark"></i>
                                    <span class="caption-subject font-dark sbold uppercase">New Client</span>
                                </div>
                            </div>
                            <div class="portlet-body form">
                                <div class="form-horizontal">
                                    <div class="form-body section">
                                        @Html.HiddenFor(m => m.ClientID)
                                        <h4>ABOUT</h4>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientName, new { @class = "col-md-3 control-label required" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => Model.ClientName, new { @class = "form-control input-large", @placeholder = "Name" })
                                                    @Html.ValidationMessageFor(m => m.ClientName)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientName2, new { @class = "col-md-3 control-label required" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user-plus"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => Model.ClientName2, new { @class = "form-control input-large", @placeholder = "Name 2" })
                                                    @Html.ValidationMessageFor(m => m.ClientName2)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientCivilId, new { @class = "col-md-3 control-label required" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-book"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientCivilId, new { @class = "form-control input-large", @placeholder = "Civil ID" })
                                                    @Html.ValidationMessageFor(m => m.ClientCivilId)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientCompany, new { @class = "col-md-3 control-label required" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-briefcase"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientCompany, new { @class = "form-control input-large", @placeholder = "Company Name" })
                                                    @Html.ValidationMessageFor(m => m.ClientCompany)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientNotes, new { @class = "col-md-3 control-label" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-list-ol"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientNotes, new { @class = "form-control input-large", @placeholder = "Notes" })
                                                    @Html.ValidationMessageFor(m => m.ClientNotes)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientAvtar, new { @class = "col-md-3 control-label" })

                                            <div class="col-md-9">
                                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="input-group input-large">
                                                        <div class="form-control uneditable-input input-fixed input-medium" data-trigger="fileinput">
                                                            <i class="fa fa-file fileinput-exists"></i>&nbsp;
                                                            <span class="fileinput-filename"> </span>
                                                        </div>
                                                        <span class="input-group-addon btn default btn-file">
                                                            <span class="fileinput-new"> Select file </span>
                                                            <span class="fileinput-exists"> Change </span>
                                                            <input type="file" name="file">
                                                        </span>
                                                        <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientEmailId, new { @class = "col-md-3 control-label required" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientEmailId, new { @class = "form-control input-large ", @placeholder = "Email Id" })
                                                    @Html.ValidationMessageFor(m => m.ClientEmailId)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-body section">
                                        <h4>CONTACT</h4>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientMobileNo, new { @class = "col-md-3 control-label required" })


                                            <div class="col-md-2">

                                                @{
                        List<SelectListItem> countrycode = new List<SelectListItem>();
                        countrycode.Add(new SelectListItem
                             {
                                 Text = "(+965)",

                                 Value = "+965"
                             });

                                                }
                                                @Html.DropDownListFor(m => m.CountryCode, countrycode, new { @class = "form-control ", @placeholder = "Mobile No", @disabled = "disabled" })

                                            </div>
                                            <div class="col-md-6 input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-mobile"></i>
                                                </span>
                                                @Html.TextBoxFor(m => m.ClientMobileNo, new { @class = "form-control input-small ", @placeholder = "Mobile No" })
                                                @Html.ValidationMessageFor(m => m.ClientMobileNo)
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientOfficeNo, new { @class = "col-md-3 control-label" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientOfficeNo, new { @class = "form-control input-large ", @placeholder = "Office No" })
                                                    @Html.ValidationMessageFor(m => m.ClientOfficeNo)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientFaxNo, new { @class = "col-md-3 control-label" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-fax"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientFaxNo, new { @class = "form-control input-large ", @placeholder = "Fax No" })
                                                    @Html.ValidationMessageFor(m => m.ClientFaxNo)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientAddress, new { @class = "col-md-3 control-label" })

                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-map"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientAddress, new { @class = "form-control input-large ", @placeholder = "Address" })
                                                    @Html.ValidationMessageFor(m => m.ClientAddress)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ClientWebsite, new { @class = "col-md-3 control-label" })
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-link"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.ClientWebsite, new { @class = "form-control input-large ", @placeholder = "Website" })
                                                    @Html.ValidationMessageFor(m => m.ClientWebsite)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <div class="btn-group">
                                                    <button type="submit" class="btn green-meadow">
                                                        <i class="fa fa-check"></i> Save
                                                    </button>
                                                    <button type="button" class="btn green-meadow dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li>
                                                            <a href="@Url.Action("SaveAndNew", "Case")" class="green-meadow" data-form-method="post"> <i class="fa fa-plus"></i> Save &amp; New </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <a href="@Url.Action("List", "Client")" class="btn red"> <i class="fa fa-remove"></i> Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $("a[data-form-method='post']").click(function (event) {
        event.preventDefault();
        var element = $(this);
        var action = element.attr("href");
        element.closest("form").each(function () {
            var form = $(this);
            form.attr("action", action);
            form.submit();
        });
    });
</script>
