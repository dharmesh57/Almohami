<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/Content/Img/logo.jpg" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <div class="row">
            <div class="col-md-12">                
                <div id="successdiv" class="alert alert-success alert-dismissible note note-success">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    <h4><i class="icon fa fa-thumbs-up"></i> success!</h4>
                    <p>
                        Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    </p>
                </div>
            </div>
        </div>
        <!-- BEGIN REGISTRATION FORM -->
      

        <!-- END REGISTRATION FORM -->
    </div>

